<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link href="https://fonts.googleapis.com/css?family=Baloo+Bhaina" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Oswald" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Inconsolata" rel="stylesheet">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/nnpplatform/css/main.css') }}" type="text/css" />
        {# {% stylesheets "{{ asset('bundles/nnpplatform/css/main.css') }}"  %}
          <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
        {% endstylesheets %} #}
    </head>
    <body>
        {% block entete %}
        <div class="container-fluid">
            <section class="top-header">
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-4 ">
                        <ul class="nav navbar-nav top-menu">
                          <li><a href="{{ path('nnp_platform_presentation') }}">Qui sommes-nous ?</a></li>
                          <li><a href="#">Comment Ã§a marche !</a></li>
                          <li><a href="#">Nous contacter</a></li>
                        </ul>
                    </div>
                    <div class="col-md-4 reseaux">
                        <!-- <div class="icon"><img src="{{ asset('bundles/nnpplatform/images/facebook.png')}}" /></div>
                        <div class="icon"><img src="{{ asset('bundles/nnpplatform/images/twitter.png')}}" /></div> -->
                        <div class="info-user">
                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                {% block menuUser %}
                                {% endblock %}
                            {% else %}
                                <ul class="nav navbar-nav">
                                    <li><a href="{{ path('fos_user_security_login') }}">Connexion</a></li>
                                </ul>
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-md-2"></div>
                </div>
            </section>
        </div>
        <div class="container">
            <header>
                <div class="row">
                    <div class="col-md-4"><a href="{{ path('nnp_platform_homepage') }}"><img src="{{ asset('bundles/nnpplatform/images/logo.png')}}" width="300px" /></a></div>
                    <div class="col-md-8">

                    </div>
                </div>
            </header>
        </div>
        {% endblock %}

        {% block bande %}
        {% endblock %}

        {% block body %}
        {% endblock %}

        {% block footer %}
        <div class="container-fluid">
            <section class="footer">
                <div class="row">
                    <div class="col-lg-12 alignCenter">Copyright 2016 - nendemplus.com | contact@nendemplus.com</div>
                </div>
            </section>
        </div>
        {% endblock %}
        
        {% block javascripts %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <script src="{{ asset('bundles/nnpplatform/js/main.css') }}" ></script>
        {% endblock %}
    </body>
</html>
