	{% elseif categorie == 'NJOKA' %}
	<section class="liste" style="background-image: url('http://bedingue.com/web/bundles/nnpplatform/images/fondnjoka.jpg');">
	{% elseif categorie == 'RELIGION' %}
	<section class="liste" style="background-image: url('http://bedingue.com/web/bundles/nnpplatform/images/fondreligion.jpg');">
	{% elseif categorie == 'MODE' %}
	<section class="liste" style="background-image: url('http://bedingue.com/web/bundles/nnpplatform/images/fondmode.jpg');">
	{% elseif categorie == 'AMOUR' %}
	<section class="liste" style="background-image: url('http://bedingue.com/web/bundles/nnpplatform/images/fondamour.jpg');">
	{% elseif categorie == 'KWATT' %}
	<section class="liste" style="background-image: url('http://bedingue.com/web/bundles/nnpplatform/images/fondkwatt.jpg');">
	{% endif %}
		<div class="row">
			<div class="col-md-2"></div>
			<div class="col-md-8 center">
			<h1>{{ categorie }}</h1>
			{% if listeNdems != null  %}
